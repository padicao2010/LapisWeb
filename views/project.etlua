        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                    <h3><a href="<%= url_for("index") %>">
                            <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                        </a> /
                        <%= project.pname %>
                    </h3>
                    <p><%= project.pdesc %></p>
                </div>
                <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                    <p>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                文件列表 <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li class="active"><a href="#">文件列表</a></li>
                                <li><a href="<%= url_for("dict", project) %>">词典</a></li>
                                <li><a href="<%= url_for("download", project) %>">下载</a></li>
                            </ul>
                        </div>
                        共 <mark><%= project.pline %></mark> 行，
                        已翻译 <mark><%= project.ntred %></mark> 行，
                        共 <mark><%= project.pfile %></mark> 个文件，
                        共 <mark><%= pageCount %></mark> 页，
                        第 <mark><%= pageIndex %></mark> 页
                        
                        <% if admin_state then %>
                        <a class="btn btn-default" data-toggle="collapse" href="#collapseupload">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        </a>
                        <% end %>
                    </p>
                    <% if admin_state then %>
                    <div id="collapseupload" class="collapse">
                        <form method="post" enctype="multipart/form-data" >
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="fileUpload">选择文件</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="file" id="fileUpload" name="uploadfile" required="required">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="fileDesc">描述</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" id="fileDesc" name="desc" rows="4" placeholder="少于256字母"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-default">上传</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <% end %>
                </div>
                    
                <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                    <% for _, f in ipairs(files) do %>
                    <div class="list-group">
                        <h4 class="list-group-item">
                            <a href="<%= url_for("file", f) %>">
                                <%= f.fname %>
                            </a>
                            <small>
                                共 <mark><%= f.fline %></mark> 行，
                                已翻译 <mark><%= f.ntred %></mark> 行
                            </small>
                        </h4>
                        <p class="list-group-item"><%= f.fdesc %></p>
                    </div>
                    <% end %>

                    <nav aria-label="...">
                      <ul class="pager">
                        <li class="<%= pageIndex<=1 and 'disabled' or '' %>"><a href="<%= pageIndex>1 and url_for('project', { pid=project.pid,pageid=pageIndex-1 }) or '#' %>">
                            上一页
                        </a></li>
                        <li class="<%= pageIndex>=pageCount and 'disabled' or '' %>"><a href="<%= pageIndex<pageCount and url_for('project', { pid=project.pid,pageid=pageIndex+1 }) or '#' %>">
                            下一页
                        </a></li>
                      </ul>
                    </nav>
                </div>
            </div>
        </div>
